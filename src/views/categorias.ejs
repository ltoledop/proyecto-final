<!-- views/categorias.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Categorías</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Incluir Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    
    <!-- Sidebar -->
    <%- include('partials/sidebar.ejs') %>

    <div class="content container my-5">
        <h2 class="text-center mb-4">Administración de Categorías</h2>
        
        <!-- Botón para agregar nueva categoría -->
        <div class="mb-3 text-right">
            <a href="/categorias/nuevo" class="btn btn-success">Agregar Categoría</a>
        </div>

        <!-- Tabla de categorías -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% categorias.forEach(categoria => { %>
                        <tr>
                            <td><%= categoria.categoria_id %></td>
                            <td><%= categoria.nombre %></td>
                            <td><%= categoria.descripcion %></td>
                            <td>
                                <!-- Botón Editar -->
                                <a href="/categorias/editar/<%= categoria.categoria_id %>" class="btn btn-warning btn-sm">Editar</a>
                                
                                <!-- Botón Eliminar -->
                                <form action="/categorias/<%= categoria.categoria_id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Incluir Bootstrap JS y dependencias (jQuery y Popper.js) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.4.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>